{
  "compilerOptions" : {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "outDir" : "./build",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "incremental": true
  },
  "include": ["./src/**/*"],
  "exclude" : ["node_modules"]
}
